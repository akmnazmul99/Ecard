<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:padding="@dimen/activity_padding"
    android:orientation="vertical"
    tools:showIn="@layout/activity_verification_code"
    tools:context="com.example.sampanit.ecard.VerificationCode">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/verification_code_custom_border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="45dp"
            android:text="Verification Code"
            android:textSize="22dp"
            android:textColor="#ff6600"
            android:textStyle="italic|bold|normal"
            android:typeface="serif" />
        <EditText
            android:id="@+id/et_sign_up_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/edit_text"
            android:padding="4dp"/>

        <Button
            android:id ="@+id/verification_code_send_button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:layout_gravity="right"
            android:text="Send"
            android:textAllCaps="false"
            android:background="@drawable/common_bordered_orrange_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
