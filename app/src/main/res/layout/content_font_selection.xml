<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/action_bar_height"
    tools:context="com.example.sampanit.ecard.FontSelection"
    tools:showIn="@layout/app_bar_font_selection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/main_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Select Font"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textColor="#ff6600"
            android:textStyle="italic|bold|normal"
            android:typeface="serif" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/font_selection_custom_border">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="395dp"
                android:padding="10dp"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp">
                    <RadioButton
                        android:id="@+id/font_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/font_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"/>
                    <RadioButton
                        android:id="@+id/font_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectangle Shape Card"
                        android:textColor="#ff6600"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"/>
                </RadioGroup>
            </ScrollView>
        </LinearLayout>
        <Button
            android:id ="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Next"
            android:textAllCaps="false"
            android:background="@drawable/common_bordered_orrange_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
